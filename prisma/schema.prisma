// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @unique //comes from kinde auth
  email String @unique
  role Role @default(USER)

  Auction Auction[]
  Bid Bid[]

  stripeCustomerId String? @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId String? @unique @map(name: "stripe_subscription_id")
  stripePriceId String? @unique @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")
}

model Auction {
  id String @id @default(cuid())
  title String
  location String
  startsAt DateTime
  endsAt DateTime

  imgUploadStatus UploadStatus @default(PENDING)

  imgUrl      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // numOfLots Int @default(0)
  // numOfBids Int @default(0)
  mostPopularLotTitle String?

  Lot Lot[]

  userId String?  // Foreign key referencing the User model
  User User? @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Lot {
  id String @id @default(cuid())
  title String
  description String
  category String
  minBid Float @default(1)
  lotNumber Int

  mainImgUrl String? // 
  topBidId String? // References the top bid id, but is not a formal relation

  LotImage LotImage[]
  Bid Bid[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  auctionId String? // Foreign key referencing the Auction model
  Auction Auction? @relation(fields: [auctionId], references: [id])
  @@index([auctionId])

}

model LotImage {
  id String @id @default(cuid())
  imgUrl String

  lotId String?
  Lot Lot? @relation(fields: [lotId], references: [id])
  @@index([lotId])

}

model Bid {
  id String @id @default(cuid())
  amount Float

  lotId String?
  Lot Lot? @relation(fields: [lotId], references: [id])
  @@index([lotId])

  userId String
  User User? @relation(fields: [userId], references: [id])
  @@index([userId])
}

enum Role {
  USER
  ADMIN
}

enum UploadStatus {
  PENDING
  PROCESSING
  FAILED
  SUCCESS
}

