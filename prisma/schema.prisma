// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @unique //comes from kinde auth
  email String @unique
  role Role @default(USER)

  Auction Auction[]

  stripeCustomerId String? @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId String? @unique @map(name: "stripe_subscription_id")
  stripePriceId String? @unique @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")
}

model Auction {
  id String @id @default(cuid())
  title String
  location String
  startsAt DateTime
  endsAt DateTime

  imgUploadStatus UploadStatus @default(PENDING)

  imgUrl      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  numOfLots Int @default(0)
  numOfBids Int @default(0)
  mostPopularLotTitle String?

  userId String?  // Foreign key referencing the User model
  User User? @relation(fields: [userId], references: [id])

  @@index([userId])
}

enum Role {
  USER
  ADMIN
}

enum UploadStatus {
  PENDING
  PROCESSING
  FAILED
  SUCCESS
}
